/**
 * @file Firestore Security Rules
 * @description This ruleset secures the TableBites application data.
 *
 * Key principles:
 * - Anonymous users can create orders.
 * - Only authenticated admins can read the list of all orders.
 * - Public data (restaurant info, menus) is readable by anyone.
 *
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read restaurant and menu data. Only admins can write.
     */
    match /restaurants/{restaurantId} {
      allow get, list: if true;
      allow write: if isAdmin(); // `write` covers create, update, delete

      match /menuCategories/{menuCategoryId} {
        allow get, list: if true;
        allow write: if isAdmin();

        match /menuItems/{menuItemId} {
          allow get, list: if true;
          allow write: if isAdmin();
        }
      }

      /**
       * @description Rules for the 'orders' subcollection.
       *              - This block handles collection-level queries.
       *              - Only admins are allowed to list (query) the orders collection.
       */
      match /orders/{orderId} {
        
        /**
        * @description Rule for listing the entire collection. Admins can list all orders.
        */
        allow list: if isAdmin();

        /**
        * @description Rules for actions on a single document.
        *              - Any signed-in user (including anonymous) can create an order.
        *              - Only admins can read, update, or delete a specific order.
        */
        allow get, update, delete: if isAdmin();
        allow create: if isSignedIn();

        match /orderItems/{orderItemId} {
          // Rules for order items follow the parent order's permissions.
          allow get, list: if isAdmin();
          allow create: if isSignedIn();
          // Let admins modify or delete individual items if needed.
          allow write: if isAdmin();
        }
      }

      /**
       * @description Table data is public to read, but only admins can modify.
       */
      match /tables/{tableId} {
        allow get, list: if true;
        allow write: if isAdmin();
      }
    }

    /**
     * Helper Functions
     */

    /**
     * @description Checks if a user is signed in (can be anonymous).
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    /**
     * @description Checks if the user is a designated administrator.
     */
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "admin@tablebites.com";
    }
  }
}
